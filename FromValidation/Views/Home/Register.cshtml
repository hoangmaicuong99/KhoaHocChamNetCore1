@model FromValidation.Models.RegisterModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section header{
    <style>
        .field-validation-error {
            color: red;
        }

        .validation-summary-errors {
            color: red
        }
    </style>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-2.2.0.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.16.0/jquery.validate.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.6/jquery.validate.unobtrusive.min.js"></script>
}
<h1>Đăng ký</h1>
<div asp-validation-summary="ModelOnly">
    <span>Lỗi của bạn.</span>
</div>
<form method="post">
    <label asp-for="email">Email: </label>
    <input type="text" asp-for="email" />
    <span asp-validation-for="email"></span>
    <label asp-for="pass">Mật khẩu:</label>
    <input type="password" asp-for="pass" />
    <span asp-validation-for="pass"></span>
    <label asp-for="retypePass">Nhập lại: </label>
    <input type="password" asp-for="retypePass" />
    <span asp-validation-for="retypePass"></span>
    <button type="submit">Gửi</button>
</form>